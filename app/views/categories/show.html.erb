<h3 class="header-font">All Items for  <%= @category.name %>  </h3>

<div class="jumbotron table-responsive">
 <table class="table table-hover table-bticketed table-condensed table-font">
   <tr> <th class="center-content">Name</th> <th class="center-content">Price</th> <th class="center-content"></th></tr>
   <% @items.each do |item| %>
     <tr id="item_<%= item.id %>">
       <td><%= link_to item.name, item_path(item) %></td>
       <td><%= number_to_currency(item.price, :unit => "$") %></td>
       <% if item.retired == "N" %>
        <td><%= button_to "Add to Ticket", create_ticket_path(item_id: item.id), class: "btn btn-success" %></td>
       <% else %>
        <td><%= button_to "Item Retired", item_path(item), class: "btn btn-warning" %></td>
      <% end %>     
    </tr>
   <% end  %>
 </table>
</div>
