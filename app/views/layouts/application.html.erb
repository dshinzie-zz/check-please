<!DOCTYPE html>
<html>
  <head>
    <title>Check Please!</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application_css', media: 'all' %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

  </head>

  <body>
    <%= render partial: "shared/navbar" %>
    
    <% flash.each do |type, message| %>
      <div class="center-content center-block container alert alert-<%= type %>"><%= message %>
    <% end  %>
      </div>
    <div class="container center-content">
      <%= yield %>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
<script src="/js/bootstrap.js"></script>

<script>
  var button = document.getElementById("buttonPress");
  button.addEventListener("click", relocate)
  function relocate() {
    var input = document.getElementById("identifierSubmit");
    event.preventDefault()
    window.location.pathname = "/items/" + input.value;
  }
</script>


  </body>
</html>
